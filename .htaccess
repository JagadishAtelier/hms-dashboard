<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If file or directory exists â†’ serve normally
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise redirect to index.html (SPA routing)
  RewriteRule ^ index.html [L]
</IfModule>
